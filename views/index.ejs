<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Messenger App</title>
    <link rel="stylesheet" href="style.css">
</head>
<body></body>
    <h1>All Chats</h1>
    <br>
    <form method="GET" action="/chats/new">
        <button>New Chat</button>
    </form>
    <br>
    <% for(let chat of chats){ %>
        <div class="chat">
            <p>From: <%= chat.from %></p>
            <div class="msg">
                <p> <%= chat.msg %></p>
                <form method="GET" action="/chats/<%= chat.id %>/edit">
                    <button>Edit</button>
                </form>
            </div>
            <p>Received By: <%= chat.to %></p>
            <p>Send At: <%= chat.created_at.toString().split(" ")[4] %></p>
            <p>Send On: <%= chat.created_at.toString().split(" ").slice(0,4).join(" ") %></p>
            <form method="POST" action="/delete/<%= chat.id %>?_method=DELETE">
                <button>Delete this chat</button>
            </form>
        </div>
        <hr>
    <% } %>

</body>
</html>